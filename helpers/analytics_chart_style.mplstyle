# analytics_chart_style.mplstyle
# Apply with: plt.style.use('helpers/analytics_chart_style.mplstyle')
# Or use the apply_style() function from chart_helpers.py for full control

# Figure
figure.facecolor: 1A1A2E
figure.figsize: 10, 5.5
figure.dpi: 100

# Axes
axes.facecolor: 1A1A2E
axes.edgecolor: 3A3A5A
axes.linewidth: 0.8
axes.labelcolor: 9090A8
axes.labelsize: 10
axes.titlesize: 14
axes.titleweight: semibold
axes.titlelocation: left
axes.titlecolor: E8E8F0
axes.grid: True
axes.grid.axis: y
axes.spines.top: False
axes.spines.right: False
axes.spines.left: False
axes.prop_cycle: cycler('color', ['555570', '555570', '555570', '555570', '555570', '555570'])

# Grid
grid.color: 2A2A45
grid.linewidth: 0.5
grid.linestyle: -

# Ticks
xtick.color: 9090A8
ytick.color: 9090A8
xtick.labelsize: 10
ytick.labelsize: 10
xtick.bottom: True
xtick.top: False
ytick.left: False
ytick.right: False
xtick.major.size: 0
ytick.major.size: 0

# Text
text.color: E8E8F0
font.family: sans-serif
font.size: 11

# Lines
lines.linewidth: 1.5
lines.solid_capstyle: round

# Patches (bars, etc.)
patch.linewidth: 0

# Legend (we avoid legends, but just in case)
legend.frameon: False
legend.fontsize: 10
legend.labelcolor: 9090A8

# Save
savefig.facecolor: 1A1A2E
savefig.bbox: tight
savefig.dpi: 200
